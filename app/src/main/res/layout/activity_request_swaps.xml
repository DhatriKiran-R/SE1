<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestSwapsActivity">

    <TextView
        android:id="@+id/your_shifts_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Shift:"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <Spinner
        android:id="@+id/shifts_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/your_shifts_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/covering_student_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Covering Student Email (Optional):"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/shifts_spinner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/covering_student_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter covering student's email"
        app:layout_constraintTop_toBottomOf="@+id/covering_student_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/submit_swap_request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Swap Request"
        app:layout_constraintTop_toBottomOf="@+id/covering_student_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
