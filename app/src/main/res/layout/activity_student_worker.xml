<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!-- TextView for displaying email -->
    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textSize="18sp"
        android:layout_margin="16dp" />

    <!-- TextView for displaying student ID -->
    <TextView
        android:id="@+id/student_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student ID: "
        android:textSize="18sp"
        android:layout_below="@id/email_text_view"
        android:layout_margin="16dp" />

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/purple_200"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/black"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu_student_worker" /> <!-- Assuming you create a new menu file -->

</RelativeLayout>
